{
  "name": "damonhu/flarum-ext-biosignature",
  "type": "flarum-extension",
  "description": "Display user bio as signature in posts",
  "keywords": ["flarum", "signature", "bio"],
  "license": "MIT",
  "authors": [
    {
      "name": "Damon",
      "email": "dong765@qq.com"
    }
  ],
  "require": {
    "flarum/core": "^1.0"
  },
  "extra": {
    "flarum-extension": {
      "title": "Bio Signature",
      "category": "feature",
      "icon": {
        "name": "fas fa-signature",
        "backgroundColor": "#2185d0",
        "color": "#fff"
      },
      "js": {
        "forum": "js/dist/forum.js"
      }
    }
  },
  "autoload": {
    "psr-4": {
      "Damonhu\\BioSignature\\": "src/"
    }
  }
}
